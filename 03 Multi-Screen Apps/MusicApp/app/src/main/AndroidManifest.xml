<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.musicapp.MainActivity" android:label="Home Menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.musicapp.store.Store"
            android:label="Music Store" />
        <activity
            android:name="com.example.android.musicapp.library.Library"
            android:label="Music Library" />
        <activity
            android:name="com.example.android.musicapp.settings.Settings"
            android:label="Settings" />
        <activity
            android:name="com.example.android.musicapp.store.Store_Recommendations"
            android:label="Your Recommendations" />
        <activity
            android:name="com.example.android.musicapp.store.Store_TopSongs"
            android:label="Top Songs" />
        <activity
            android:name="com.example.android.musicapp.library.Library_Favorites"
            android:label="Favorites" />
        <activity
            android:name="com.example.android.musicapp.library.Library_Recent"
            android:label="Recent Songs" />
        <activity android:name="com.example.android.musicapp.CurrentSong" android:label="Currently Playing Song" />
        <activity android:name="com.example.android.musicapp.store.Store_Song" android:label="Try out Song"></activity>
    </application>

</manifest>